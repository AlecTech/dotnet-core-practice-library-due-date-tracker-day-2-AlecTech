@{
    ViewData["Title"] = "List";
}

<h1>List</h1>
@if (ViewBag.Books.Count > 0)
{
    <ol>
        <li>

            @foreach (Book book in ViewBag.Books)
            {
                <div>
                    <div><span>ID: </span>@(book.ID)<a href="/Book/Details?id=@(book.ID)">@(book.Title)</a> </div>
                    <div><span>Title: </span>@(book.Title)</div>
                    <div><span>Author: </span>@(book.Author.Name)</div>
                    <div><span>Publication Date: </span>@(book.PublicationDate.ToLongDateString())</div>
                    @* <div><span>Checked Out Date: </span>@(book.CheckedOutDate.ToLongDateString())</div>*@
                    @*<div><span>Due Date: </span>@(book.DueDate.ToLongDateString())</div>*@
                    @*<div><span>Status: </span>@(book.ReturnedDate == null ? "Taken" : ((DateTime)book.ReturnedDate).ToLongDateString())</div>*@
                </div>
            }
        </li>
    </ol>
}
else @if (ViewBag.Authors.Count > 0)
{
<ol>
    <li>

        @foreach (Author book in ViewBag.Authors)
        {
            <div>
               
                <div><span>Author: </span>@(book.Name)</div>
            
                @* <div><span>Checked Out Date: </span>@(book.CheckedOutDate.ToLongDateString())</div>*@
                @*<div><span>Due Date: </span>@(book.DueDate.ToLongDateString())</div>*@
                @*<div><span>Status: </span>@(book.ReturnedDate == null ? "Taken" : ((DateTime)book.ReturnedDate).ToLongDateString())</div>*@
            </div>
        }
    </li>
</ol>

}
else
{
<p>No books have been checked out.</p>
}